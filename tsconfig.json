{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es2015",
    "module": "CommonJS",
    "lib": ["es2019"],
    "importHelpers": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noEmitOnError": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "rootDir": "src",
    "baseUrl": "."
  },
  "include": [
    "src/ts"
  ]
}
